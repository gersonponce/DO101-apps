extends layout
block content
  .container
      h2 
        p
         | Aplicacion para el clima
      br
      br
      .row
        .col-md-3
          form(method="post", action="get_weather")
            .form-group
              label.sr-only(for="city") Nombre de la cuidad
              input.form-control( name="city" type="text" placeholder="Ingresar el nombre de la ciudad (ejm. Puno)" required='required')
            button.btn.btn-success(type="submit") Obtener CLima
      if error
        br
        .alert.alert-danger #{error}
      if weather
        .row
          .col-md-5
            p
            br
            .panel.panel-primary
              .panel-heading Clima Para: #{weather.name}, #{weather.sys.country}
              .panel-body
               p Temperatura actual= #{weather.main.temp} !{units}, #{weather.weather[0].description}
               p Humedad = #{weather.main.humidity} &#37;
               p Min = #{weather.main.temp_min} !{units}
               p Max = #{weather.main.temp_max} !{units}